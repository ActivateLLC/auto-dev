{
  "name": "creai",
  "displayName": "Creai.Dev",
  "description": "fully autonomous",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "creai.assist",
        "title": "Creai: Get AI Assistance"
      },
      {
        "command": "creai.review",
        "title": "Creai: Review Code"
      },
      {
        "command": "creai.toggleLiveView",
        "title": "Creai: Toggle Live View"
      },
      {
        "command": "creai.refresh",
        "title": "Creai: Refresh Analysis"
      },
      {
        "command": "creai.advancedAnalysis",
        "title": "Creai: Perform Advanced Analysis"
      },
      {
        "command": "creai.openChat",
        "title": "Creai: Open Chat Interface"
      }
    ],
    "configuration": {
      "title": "Creai.Dev",
      "properties": {
        "creai.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "build": "pnpm run compile",
    "dev": "pnpm run watch && code --extensionDevelopmentPath=${workspaceFolder}"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/sinon": "^10.0.0",
    "@types/vscode": "^1.95.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.24.0",
    "glob": "^7.2.0",
    "globals": "^15.12.0",
    "mocha": "^10.0.0",
    "sinon": "^15.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "openai": "^4.0.0"
  },
  "publisher": "aaron-aldana",
  "repository": {
    "type": "git",
    "url": "https://github.com/ActivateLLC/autodev-genie/tree/main/creai"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "keywords": [
    "ai",
    "code analysis",
    "quantum",
    "blockchain",
    "edge computing",
    "cross-platform"
  ]
}